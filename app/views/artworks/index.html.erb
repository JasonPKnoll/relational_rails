<h1>All Artworks</h1>

<% @artworks.each do |artwork| %>
  <h3>Artwork Name: <a href="/artworks/<%= artwork.id %>"><%= artwork.name %></a></h3>
  <p>Type: <%= artwork.art_type %></p>
  <p>Price: $<%= artwork.price %></p>
  <p>For Sale? = <%= artwork.for_sale %></p>
  <p>Created At: <%= artwork.created_at %></p>
  <p>Updated At: <%= artwork.updated_at %></p>

  <a href="/artworks/<%= artwork.id  %>/edit">Edit <%= artwork.name %></a><br><br>
  <%= link_to "Delete #{artwork.name}", "/artworks/#{artwork.id}", method: "delete" %>
<% end %>
