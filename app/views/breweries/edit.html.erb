<%= form_with url: "/breweries/#{@brewery.id}", method: :patch, local: true do |form| %>
  <%= form.label :name, 'Name:' %>
  <%= form.text_field :name %>
  <%= form.label :location, 'Location:' %>
  <%= form.text_field :location %>
  <%= form.label :year_established, 'Year Established:' %>
  <%= form.number_field :year_established %>
  <%= form.label :multiple_brewhouses, 'Multiple Brewhouses: True' %>
  <%= form.radio_button :multiple_brewhouses, 'true' %>
  <%= form.label :multiple_brewhouses, 'False' %>
  <%= form.radio_button :multiple_brewhouses, 'false' %>

  <%= form.submit "Update Brewery" %>
<% end %>
